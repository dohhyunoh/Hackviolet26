{
  "expo": {
    "name": "lunaflow",
    "slug": "lunaflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lunaflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Lunaflow needs access to your microphone to record voice samples for hormonal analysis.",
        "NSHealthShareUsageDescription": "Lunaflow needs access to your health data to provide personalized insights.",
        "NSHealthUpdateUsageDescription": "Lunaflow needs to update your health data."
      },
      "bundleIdentifier": "com.anonymous.lunaflow"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@kingstinct/react-native-healthkit",
        {
          "healthSharePermission": "Allow LunaFlow to read your health data for cycle tracking",
          "healthUpdatePermission": "Allow LunaFlow to update your health data"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
